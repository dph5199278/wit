<div class="row" style="height:100%;">
	<div class="col-lg-12" style="border-right:1px solid #e6e6e6;padding-right:0px;">
		<h1 class="site-h1" style="background-color:#FFFFFF;">
			黑名单列表<#if blackList??>（${blackList?size}）</#if>
			<span style="float:right;">
				<button class="layui-btn layui-btn-small green" href="/admin/callcenter/black/add.html" data-toggle="ajax" data-width="700" data-height="300" data-title="添加黑名单">
					添加黑名单
				</button>
			</span>
		</h1>
		<div class="row">
			<div class="col-lg-12">
				<div class="row" style="padding:5px;">
					<div class="col-lg-12">
						<table class="layui-table" lay-skin="line">
						  <colgroup>
								<col width="50%">
								<col width="20%">
								<col width="1%">
								<col>
						  </colgroup>
						  <thead>
							<tr>
							  <th>号码</th>
							  <th>创建时间</th>
							  <th style="white-space:nowrap;" nowrap="nowrap">操作</th>
							</tr> 
						  </thead>
						  <tbody>
							<#if blackList??>
							<#list blackList as black>
							<tr>
							  <td>
								  ${black.phone!''}
							  </td>
							  <td>${black.createtime?string("yyyy-MM-dd HH:mm:ss")}</td>
							  <td style="white-space:nowrap;" nowrap="nowrap">
							  		<a href="/admin/callcenter/black/edit.html?id=${black.id!''}" data-toggle="ajax"  data-width="700" data-height="300" data-title="编辑黑名单">
							  			<i class="layui-icon">&#xe642;</i>
							  			编辑
							  		</a>
							  		<a href="/admin/callcenter/black/delete.html?id=${black.id!''}" data-callback="loadURL" data-target="#callCenterContent" style="margin-left:10px;" data-toggle="tip" data-title="请确认是否删除黑名单？">
							  			<i class="layui-icon" style="color:red;">&#x1006;</i>
							  			删除
							  		</a>
							  </td>
							</tr>
							</#list>
							</#if>
						  </tbody>
						</table>
					</div> 	   
				</div>
			</div>	
		</div>
	</div>	
</div>
