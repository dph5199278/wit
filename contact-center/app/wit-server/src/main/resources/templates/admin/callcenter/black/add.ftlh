<div class="uk-layui-form">
    <form class="layui-form uk-form" action="/admin/callcenter/black/save.html" data-toggle="ajax-form" data-inner="#callCenterContent">
        <div class="layui-form-item">
            <label class="layui-form-label">号码：</label>
            <div class="layui-input-inline" style="width:450px;">
                <textarea type="text" name="phones" lay-verify="required" placeholder="请输入号码，多个号码之间以逗号或空格隔开" autocomplete="off" class="layui-input" style="height:150px;"></textarea>
            </div>
        </div>
        <div class="layui-form-button">
            <div class="layui-button-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<script>
layui.use('form', function(){
  var form = layui.form;
  form.render();
});
</script>