<div class="row" style="height:100%;">
	<div class="col-lg-12" style="border-right:1px solid #e6e6e6;padding-right:0px;">
		<h1 class="site-h1" style="background-color:#FFFFFF;">
			路由规则列表<#if routerRulesList??>（${routerRulesList?size}）</#if>
			<span style="float:right;">
				<button class="layui-btn layui-btn-small green" href="/admin/callcenter/router/add.html?hostid=${pbxHost.id!''}" data-toggle="ajax" data-width="750" data-title="添加路由规则">
					添加规则
				</button>
			</span>
		</h1>
		<div class="row">
			<div class="col-lg-12">
				<div class="row" style="padding:5px;">
					<div class="col-lg-12">
						<table class="layui-table" lay-skin="line">
						  <colgroup>
								<col width="10%">
								<col width="10%">
								<col width="20%">
								<col width="10%">
								<col width="10%">
								<col width="20%">
								<col width="10%">
								<col width="1%">
								<col>
						  </colgroup>
						  <thead>
							<tr>
							  <th>名称</th>
							  <th>字段</th>
							  <th>规则</th>
							  <th>序号</th>
							  <th>错误终止</th>
							  <th>创建时间</th>
							  <th>规则内容</th>
							  <th style="white-space:nowrap;" nowrap="nowrap">操作</th>
							</tr> 
						  </thead>
						  <tbody>
							<#if routerRulesList??>
							<#list routerRulesList as router>
							<tr>
								<td>
									<a href="/admin/callcenter/router/code.html?hostid=${pbxHost.id!''}&id=${router.id!''}" data-toggle="ajax" data-width="650" data-height="350">${router.name!''}</a>
								 </td>
								<td>${router.field!''}</td>
								<td>${router.regex!''}</td>
								<td>${router.routerinx!''}</td>
							  
								<td>
									<#if router.falsebreak>
										<i class="layui-icon" style="color:#19a55d;">&#xe618;</i>
									</#if>
								</td>
								  
								  <td>${router.createtime?string("yyyy-MM-dd HH:mm:ss")}</td>
								  <td>
									<#if router.routercontent?? && router.routercontent != ''>
										<i class="layui-icon" style="color:#19a55d;">&#xe618;</i>
									</#if>
								</td>
								  <td style="white-space:nowrap;" nowrap="nowrap">
								  		<a href="/admin/callcenter/router/edit.html?id=${router.id!''}&hostid=${pbxHost.id!''}" data-toggle="ajax" data-width="750" data-title="编辑服务器信息">
								  			<i class="layui-icon">&#xe642;</i>
								  			编辑
								  		</a>
								  		<a href="/admin/callcenter/router/delete.html?id=${router.id!''}&hostid=${pbxHost.id!''}" data-callback="loadURL" style="margin-left:10px;" data-toggle="tip" data-target="#callCenterContent" data-title="请确认是否删除服务器？">
								  			<i class="layui-icon" style="color:red;">&#x1006;</i>
								  			删除
								  		</a>
								  </td>
							</tr>
							</#list>
							</#if>
						  </tbody>
						</table>
					</div> 	   
				</div>
			</div>	
		</div>
	</div>	
</div>
